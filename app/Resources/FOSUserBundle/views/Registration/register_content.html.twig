{% trans_default_domain 'FOSUserBundle' %}

{# TODO: Tranlation for labels#}

<div class="container mt-4">
    {{ form_start(form) }}
    <div class="form-text border-bottom">
        <label><h2>Zajerestruj konto.</h2></label>
    </div>
    <div class="form-group mt-2">
        <label>Numer indexu:</label>
        {{ form_widget(form.ind_number, {'attr': {'class': 'input form-control', 'placeholder': 'np: 39310'}}) }}
        <small id="emailHelp" class="form-text text-muted">Uczelniany numer indexu, każdy student posiada swój unikatowy kod.</small>
    </div>
    <div class="form-group">
        <label>Imie:</label>
        {{ form_widget(form.username, {'attr': {'class': 'input form-control', 'placeholder': 'np: Piotr'}}) }}
    </div>
    <div class="form-group">
        <label>Nazwisko:</label>
        {{ form_widget(form.surname, {'attr': {'class': 'input form-control', 'placeholder': 'np: Kowalski'}}) }}
    </div>
    <div class="form-group">
        <label>Email:</label>
        {{ form_widget(form.email, {'attr': {'class': 'input form-control', 'placeholder': 'np: pkowalski@o2.pl'}}) }}
    </div>
    <div class="form-group">
        <label>Hasło:</label>
        {{ form_widget(form.plainPassword.first, {'attr': {'class': 'input form-control', 'placeholder': 'Twoje hasło'}}) }}
    </div>
    <div class="form-group">
        <label>Powtórz hasło:</label>
        {{ form_widget(form.plainPassword.second, {'attr': {'class': 'input form-control', 'placeholder': 'Powtórz swoje hasło'}}) }}
    </div>
    <div>
        {{ form_row(form.save, { 'attr': {'class': 'btn btn-primary mt-3'}} ) }}
    </div>
    {{ form_end(form) }}
</div>
