{% extends 'base.html.twig' %}

{% block body %}
    <div class="row">
        {% if downloads %}
            <div class="col-lg-12 table-wrapper-scroll-y my-custom-scrollbar">
                <table class="table table-bordered table-striped mb-0">
                    <thead>
                    <tr>
                        <th scope="col">#</th>
                        <th scope="col">Numer indeksu</th>
                        <th scope="col">Plik</th>
                        <th scope="col">Data</th>
                        <th scope="col">IP</th>

                    </tr>
                    </thead>
                    <tbody>
                    {% for dw in downloads %}
                        <tr>
                            <th scope="row">{{ dw.id }}</th>
                            <td>{{ dw.user.indNumber }}</td>
                            <td>{{ dw.file.brochureFileName }}</td>
                            <td>{{ dw.date|date('d-m-Y H:i:s') }}</td>
                            <td>{{ dw.ip }}</td>

                        </tr>
                    {% endfor %}
                    </tbody>
                </table>
            </div>
        {% endif %} {# TODO: create else with info #}
    </div>
{% endblock %}